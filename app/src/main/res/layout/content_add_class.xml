<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.schedule.AddClass"
    tools:showIn="@layout/activity_add_class">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/group_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/popup_groupName_label"
                android:textSize="16sp"
                android:textColor="@color/appDefaultBlack"
                android:layout_marginTop="26dp"
                android:layout_marginStart="15dp"/>
            <AutoCompleteTextView
                android:id="@+id/groupNameSuggestET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/sideBar"
                android:textSize="16sp"
                android:textColor="@color/appDefaultBlack"
                android:completionThreshold="1"
                android:layout_marginTop="15dp"
                android:layout_marginStart="44dp"
                android:layout_marginEnd="15dp"
                android:layout_toEndOf="@id/group_name_label"
                android:maxLength="30"
                />
            <TextView
                android:id="@+id/subject_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/popup_subjectName_label"
                android:textSize="16sp"
                android:textColor="@color/appDefaultBlack"
                android:layout_below="@id/group_name_label"
                android:layout_marginTop="23dp"
                android:layout_marginStart="15dp"/>
            <Spinner
                android:id="@+id/spinnerSubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/subject_name_label"
                android:layout_below="@id/groupNameSuggestET"
                android:layout_marginStart="23dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="15dp" />

            <TextView
                android:id="@+id/duration_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/popup_duration_label"
                android:textSize="16sp"
                android:textColor="@color/appDefaultBlack"
                android:layout_below="@id/subject_name_label"
                android:layout_marginStart="15dp"
                android:layout_marginTop="23dp"
                />
            <RadioGroup
                android:id="@+id/duration_rgroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/spinnerSubject"
                android:layout_toEndOf="@id/duration_label"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="9dp">
                <RadioButton
                    android:id="@+id/duration_rgroup_short"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/popup_duration_short"
                    />
                <RadioButton
                    android:id="@+id/duration_rgroup_full"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:text="@string/popup_duration_full"
                    />
            </RadioGroup>
            <TextView
                android:id="@+id/repeat_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/repeat_for_next_weeks_label"
                android:textSize="16sp"
                android:textColor="@color/appDefaultBlack"
                android:layout_below="@id/duration_label"
                android:layout_marginStart="15dp"
                android:layout_marginTop="23dp"
                />
            <Spinner
                android:id="@+id/spinnerRepeatForWeeks"
                android:entries="@array/week_repeat_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/repeat_label"
                android:layout_below="@id/duration_rgroup"
                android:layout_marginStart="23dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp" />

            <TextView
                android:id="@+id/description_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description_label"
                android:textSize="16sp"
                android:textColor="@color/appDefaultBlack"
                android:layout_below="@id/repeat_label"
                android:layout_marginStart="15dp"
                android:layout_marginTop="23dp"
                />

            <EditText
                android:id="@+id/description_editText"
                android:layout_below="@id/spinnerRepeatForWeeks"
                android:layout_toEndOf="@id/description_label"
                android:layout_marginStart="23dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:inputType="textMultiLine"
                android:lines="4"
                android:minLines="4"
                android:gravity="top|left"
                android:maxLines="7"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scrollbars="vertical"/>

            <TextView
                android:id="@+id/notification_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notification_label"
                android:textSize="16sp"
                android:textColor="@color/appDefaultBlack"
                android:layout_below="@id/description_editText"
                android:layout_marginStart="15dp"
                android:layout_marginTop="23dp"
                />

            <Spinner
                android:id="@+id/spinnerNotificationBefore"
                android:entries="@array/notification_before_variants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/notification_label"
                android:layout_below="@id/description_editText"
                android:layout_marginStart="23dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>