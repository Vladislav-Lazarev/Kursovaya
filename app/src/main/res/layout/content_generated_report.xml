<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.report.GeneratedReportActivity"
    tools:showIn="@layout/activity_report">
<TextView
    android:id="@+id/creationDateLabel"
    android:layout_marginTop="20dp"
    android:layout_marginStart="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/appDefaultBlack"
    android:textSize="16sp"
    android:text="@string/date_creation"/>
    <TextView
        android:id="@+id/periodLabel"
        android:layout_below="@id/creationDateLabel"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/appDefaultBlack"
        android:textSize="16sp"
        android:text="@string/period_report"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/periodLabel"
    android:layout_marginTop="20dp"
    android:paddingBottom="10dp"
    android:scrollbars="horizontal|vertical"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:scrollbarStyle="outsideInset"
    android:fillViewport="true">

    <HorizontalScrollView
        android:id="@+id/horizontalView"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal|vertical"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dip">
    <TableLayout
        android:id="@+id/reportHeaderTable"
        android:layout_below="@id/periodLabel"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/grid"
        android:isScrollContainer="true">
        <TableRow>
            <TextView
                android:textColor="@color/appDefaultBlack"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:text="@string/tableDisciplineHeader"
                android:layout_width="160dp"/>

            <TableLayout
                android:id="@+id/reportHeaderTableGroups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/grid">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grid">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tableGroupHeader"
                        android:textColor="@color/appDefaultBlack"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:layout_weight="1"/>
                </TableRow>
                <TableRow
                    android:id="@+id/groupHeaderRow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grid">

                    <TextView
                        android:id="@+id/group00"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/grid"
                        android:text="@string/tablePlanHeader"
                        android:textAlignment="center"
                        android:textColor="@color/appDefaultBlack"
                        android:textSize="16sp" />
                </TableRow>
            </TableLayout>
        </TableRow>
    </TableLayout>
    </HorizontalScrollView>
</ScrollView>

</RelativeLayout>