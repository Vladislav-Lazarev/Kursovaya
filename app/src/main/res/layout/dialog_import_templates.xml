<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:id="@+id/popupUpperTemplate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/popup_upperWeekTemplate"
        android:textSize="16sp"
        android:textColor="@color/appDefaultBlack"
        android:layout_marginTop="26dp"
        android:layout_marginStart="15dp"/>
    <Spinner
        android:id="@+id/upperTemplateSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/sideBar"
        android:textSize="16sp"
        android:textColor="@color/appDefaultBlack"
        android:layout_marginTop="26dp"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@id/popupUpperTemplate"
        />
    <TextView
        android:id="@+id/popupBottomTemplate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/popup_bottomWeekTemplate"
        android:textSize="16sp"
        android:textColor="@color/appDefaultBlack"
        android:layout_marginTop="26dp"
        android:layout_below="@id/popupUpperTemplate"
        android:layout_marginStart="15dp"/>
    <Spinner
        android:id="@+id/bottomTemplateSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/sideBar"
        android:textSize="16sp"
        android:textColor="@color/appDefaultBlack"
        android:layout_marginTop="26dp"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="15dp"
        android:layout_below="@id/upperTemplateSpinner"
        android:layout_toEndOf="@id/popupBottomTemplate"
        />
    <TextView
        android:id="@+id/popupFirstWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/popup_firstWeek"
        android:textSize="16sp"
        android:textColor="@color/appDefaultBlack"
        android:layout_marginTop="26dp"
        android:layout_below="@id/popupBottomTemplate"
        android:layout_marginStart="15dp"/>
    <RadioGroup
        android:id="@+id/popup_firstWeek_rgroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/popupFirstWeek"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp">
        <RadioButton
            android:id="@+id/popup_firstWeek_rgroup_upper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/popup_upperWeekLabel"
            android:checked="true"
            android:buttonTint="@color/sideBar"
            />
        <RadioButton
            android:id="@+id/popup_firstWeek_rgroup_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:text="@string/popup_bottomWeekLabel"
            android:buttonTint="@color/sideBar"
            />
    </RadioGroup>
    <TextView
        android:id="@+id/periodLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/popup_rangeLabel"
        android:textSize="16sp"
        android:textColor="@color/appDefaultBlack"
        android:layout_marginTop="26dp"
        android:layout_below="@id/popup_firstWeek_rgroup"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/periodFromLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/popup_rangeFromLabel"
        android:textSize="16sp"
        android:textColor="@color/appDefaultBlack"
        android:layout_marginTop="26dp"
        android:layout_below="@id/periodLabel"
        android:layout_toEndOf="@id/periodLabel"
        android:layout_marginStart="-40dp"/>

    <DatePicker
        android:id="@+id/dateFromPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/periodLabel"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="-40dp"
        android:layout_marginTop="-42dp"
        android:layout_toEndOf="@id/periodFromLabel"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:theme="@style/NumberPickerStyle" />

    <TextView
        android:id="@+id/periodToLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/periodFromLabel"
        android:layout_marginTop="90dp"
        android:layout_marginStart="28dp"
        android:text="@string/popup_rangeToLabel"
        android:textColor="@color/appDefaultBlack"
        android:textSize="16sp" />

    <DatePicker
        android:id="@+id/dateToPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateFromPicker"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-100dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:theme="@style/NumberPickerStyle" />
</RelativeLayout>