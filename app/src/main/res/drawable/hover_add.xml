<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_focused="true"
        android:state_pressed="true"
        android:drawable="@drawable/rect_add" >
        <stroke
            android:width="0.01dp"
            android:color="@color/appDefaultBlack" />
    </item>

    <item
        android:state_focused="false"
        android:state_pressed="true"
        android:drawable="@drawable/rect_add" >
        <stroke
            android:width="0.01dp"
            android:color="@color/appDefaultBlack" />
    </item>

    <item>
        <inset android:insetTop="-2dp" android:insetLeft="-2dp">
        <shape
            android:shape="rectangle" >

            <solid android:color="@color/menuTextColor" />

            <stroke
                android:width="0.01dp"
                android:color="@color/appDefaultBlack" />

        </shape>
        </inset>
    </item>
</selector>