<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<ScrollView
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/periodFromLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/popup_rangeFromLabel"
            android:textSize="16sp"
            android:textColor="@color/appDefaultBlack"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"/>

        <Button
            android:id="@+id/dateFromPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_toEndOf="@id/periodFromLabel"
            android:layout_marginStart="20dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/periodToLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/periodFromLabel"
            android:layout_marginStart="15dp"
            android:text="@string/popup_rangeToLabel"
            android:textColor="@color/appDefaultBlack"
            android:textSize="16sp" />

        <Button
            android:id="@+id/dateToPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dateFromPicker"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:layout_alignStart="@id/dateFromPicker"
            android:layout_toEndOf="@id/periodFromLabel" />
        <TextView
            android:id="@+id/courseLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/course_label"
            android:layout_below="@id/specialitySpinner"
            android:textColor="@color/appDefaultBlack"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"/>
        <TextView
            android:id="@+id/specialityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/specialty_label"
            android:layout_below="@id/dateToPicker"
            android:textColor="@color/appDefaultBlack"
            android:textSize="16sp"
            android:layout_marginStart="15dp"/>
        <Spinner
            android:id="@+id/specialitySpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dateToPicker"
            android:layout_toEndOf="@id/specialityLabel"
            android:layout_marginStart="10dp"
            />
        <Spinner
            android:id="@+id/courseSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/specialitySpinner"
            android:layout_toEndOf="@id/courseLabel"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>
</ScrollView>

</RelativeLayout>